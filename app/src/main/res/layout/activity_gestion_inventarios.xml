<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".Actividades.OpcionesDeAdmin">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:padding="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bt_GE_logout2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/Panel_inventario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GESTIÓN DE INVENTARIOS"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginBottom="16dp" />

            <ImageView
                android:id="@+id/img_inventario"
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:layout_marginBottom="24dp"
                android:contentDescription="Inventario"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/inventarios" />

            <Button
                android:id="@+id/bt_inventario_agregar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="#F6655E"
                android:text="Agregar Producto"
                android:textColor="@android:color/white"
                android:elevation="4dp" />

            <Button
                android:id="@+id/bt_inventario_listar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:backgroundTint="#F6655E"
                android:text="Listar Productos"
                android:textColor="@android:color/white"
                android:elevation="4dp" />

            <Button
                android:id="@+id/bt_inventario_modificar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:backgroundTint="#F6655E"
                android:text="Modificar Producto"
                android:textColor="@android:color/white"
                android:elevation="4dp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <Button
        android:id="@+id/bt_GE_logout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:backgroundTint="#E7312A"
        android:text="Cerrar Sesión"
        android:textColor="@android:color/white"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
