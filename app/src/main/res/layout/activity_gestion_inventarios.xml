<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Actividades.OpcionesDeAdmin">

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.351">

        <TextView
            android:id="@+id/Panel_inventario"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_margin="20sp"
            android:text="GESTION DE INVENTARIOS"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18dp" />


        <ImageView
            android:id="@+id/img_inventario"
            android:layout_width="199dp"
            android:layout_height="157dp"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/inventarios" />

        <Button
            android:id="@+id/bt_inventario_agregar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:backgroundTint="#F6655E"
            android:text="Agregar Producto" />

        <Button
            android:id="@+id/bt_inventario_listar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:backgroundTint="#F6655E"
            android:text="Listar productos" />

        <Button
            android:id="@+id/bt_inventario_modificar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:backgroundTint="#F6655E"
            android:text="Modificar Producto" />

    </LinearLayout>

    <Button
        android:id="@+id/bt_GE_logout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#E7312A"
        android:text="Cerrar Sesion"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
        app:layout_constraintVertical_bias="0.321" />

</androidx.constraintlayout.widget.ConstraintLayout>