<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Actividades.OpcionesDeAdmin">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.351">

        <TextView
            android:id="@+id/Panel_inventario"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_margin="20sp"
            android:text="GESTION DE INVENTARIOS"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18dp" />


        <ImageView
            android:id="@+id/img_inventario"
            android:layout_width="199dp"
            android:layout_height="157dp"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/inventarios" />

        <Button
            android:id="@+id/bt_inventario_agregar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:backgroundTint="#F6655E"
            android:text="Agregar Producto" />

        <TextView
            android:id="@+id/msg_agregar_producto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:text="Registra un nuevo producto en el inventario de tu establecimiento"
            android:textAlignment="center"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/bt_inventario_listar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#F6655E"
            android:text="Listar productos" />

        <TextView
            android:id="@+id/msg_listar_producto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:text="Lista por categoria todos los productos dentro del inventario de tu establecimiento"
            android:textAlignment="center"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/bt_inventario_modificar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#F6655E"
            android:text="Modificar Producto" />

        <TextView
            android:id="@+id/msg_modificar_producto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:text="Aqui podras modificar la informacion de los productos tu inventario"
            android:textAlignment="center"
            android:textColor="@color/white" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>