<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Actividades.ModificarProductos">


    <TextView
        android:id="@+id/tv_titulo_editar_Producto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="MODIFICAR DATOS"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_ModProducto_Codigo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="44dp"
        android:text="Codigo"
        android:textColor="@color/white"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_titulo_editar_Producto" />

    <TextView
        android:id="@+id/tv_ModProducto_Nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="44dp"
        android:text="Nombre"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_ModProducto_Codigo" />

    <TextView
        android:id="@+id/tv_ModProducto_categoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="44dp"
        android:text="Categoria"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_ModProducto_Nombre" />

    <TextView
        android:id="@+id/tv_ModProducto_precio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="44dp"
        android:layout_weight="0.35"
        android:text="Precio"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_ModProducto_categoria" />

    <TextView
        android:id="@+id/tv_ModProducto_Stock"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="44dp"
        android:layout_weight="0.25"
        android:text="Stock"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_ModProducto_precio" />

    <EditText
        android:id="@+id/et_ModProducto_Stock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Cantidad"
        android:inputType="text"
        android:textColor="@color/white"
        android:textColorHint="@color/material_dynamic_neutral40"
        app:layout_constraintStart_toEndOf="@+id/tv_ModProducto_Stock"
        app:layout_constraintTop_toBottomOf="@+id/et_ModProducto_precio" />

    <ImageButton
        android:id="@+id/imgbt_ModPRoducto_codigo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:background="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toEndOf="@+id/et_ModProducto_Codigo"
        app:layout_constraintTop_toBottomOf="@+id/tv_titulo_editar_Producto"
        app:srcCompat="@android:drawable/ic_menu_save" />

    <EditText
        android:id="@+id/et_ModProducto_Nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="text"
        android:textColor="@color/white"
        android:textColorHint="@color/material_dynamic_neutral40"
        app:layout_constraintStart_toEndOf="@+id/tv_ModProducto_Nombre"
        app:layout_constraintTop_toBottomOf="@+id/et_ModProducto_Codigo" />

    <ImageButton
        android:id="@+id/imgbt_ModProducto_precio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toEndOf="@+id/et_ModProducto_precio"
        app:layout_constraintTop_toBottomOf="@+id/spinner_ModProducto_categoria"
        app:srcCompat="@android:drawable/ic_menu_save" />

    <Spinner
        android:id="@+id/spinner_ModProducto_categoria"
        android:layout_width="238dp"
        android:layout_height="41dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toEndOf="@+id/tv_ModProducto_categoria"
        app:layout_constraintTop_toBottomOf="@+id/et_ModProducto_Nombre" />

    <ImageButton
        android:id="@+id/imgbt_ModProducto_Nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:background="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.557"
        app:layout_constraintStart_toEndOf="@+id/et_ModProducto_Nombre"
        app:layout_constraintTop_toBottomOf="@+id/et_ModProducto_Codigo"
        app:srcCompat="@android:drawable/ic_menu_save" />

    <ImageButton
        android:id="@+id/imgbt_ModProducto_categoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:background="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.291"
        app:layout_constraintStart_toEndOf="@+id/spinner_ModProducto_categoria"
        app:layout_constraintTop_toBottomOf="@+id/et_ModProducto_Nombre"
        app:srcCompat="@android:drawable/ic_menu_save" />

    <EditText
        android:id="@+id/et_ModProducto_Codigo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="codigo"
        android:inputType="text"
        android:textColor="@color/white"
        android:textColorHint="@color/material_dynamic_neutral40"
        app:layout_constraintStart_toEndOf="@+id/tv_ModProducto_Codigo"
        app:layout_constraintTop_toBottomOf="@+id/tv_titulo_editar_Producto" />

    <EditText
        android:id="@+id/et_ModProducto_precio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Precio"
        android:inputType="text"
        android:textColor="@color/white"
        android:textColorHint="@color/material_dynamic_neutral40"
        app:layout_constraintStart_toEndOf="@+id/tv_ModProducto_precio"
        app:layout_constraintTop_toBottomOf="@+id/spinner_ModProducto_categoria" />

    <ImageButton
        android:id="@+id/imgbt_ModProducto_Stock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:background="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.534"
        app:layout_constraintStart_toEndOf="@+id/et_ModProducto_Stock"
        app:layout_constraintTop_toBottomOf="@+id/et_ModProducto_precio"
        app:srcCompat="@android:drawable/ic_menu_save" />

    <TextView
        android:id="@+id/tv_ModProducto_descripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Descripcion"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_ModProducto_Stock" />

    <EditText
        android:id="@+id/et_ModProducto_descripcion"
        android:layout_width="313dp"
        android:layout_height="183dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:background="#cdcdcd"
        android:gravity="top|start"
        android:hint="Descripcion del producto"
        android:maxLines="10"
        android:scrollbars="vertical"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_ModProducto_descripcion" />

    <ImageButton
        android:id="@+id/imgbt_ModProducto_descripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:background="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.38"
        app:layout_constraintStart_toEndOf="@+id/et_ModProducto_descripcion"
        app:layout_constraintTop_toBottomOf="@+id/tv_ModProducto_descripcion"
        app:srcCompat="@android:drawable/ic_menu_save" />




</androidx.constraintlayout.widget.ConstraintLayout>