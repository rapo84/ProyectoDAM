<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".Actividades.ModificarProductos">

    <LinearLayout
        android:id="@+id/linear_mod_producto"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_titulo_editar_Producto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MODIFICAR DATOS"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/tv_ModProducto_Codigo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Codigo"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:layout_marginTop="24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/et_ModProducto_Codigo"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="codigo"
                android:inputType="text"
                android:textColor="@color/white"
                android:textColorHint="@color/material_dynamic_neutral40" />

            <ImageButton
                android:id="@+id/imgbt_ModPRoducto_codigo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#000000"
                app:srcCompat="@android:drawable/ic_menu_save" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_ModProducto_Nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:textColor="@color/white"
            android:layout_marginTop="24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/et_ModProducto_Nombre"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="Nombre"
                android:inputType="text"
                android:textColor="@color/white"
                android:textColorHint="@color/material_dynamic_neutral40" />

            <ImageButton
                android:id="@+id/imgbt_ModProducto_Nombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#000000"
                app:srcCompat="@android:drawable/ic_menu_save" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_ModProducto_categoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categoria"
            android:textColor="@color/white"
            android:layout_marginTop="24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <Spinner
                android:id="@+id/spinner_ModProducto_categoria"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/imgbt_ModProducto_categoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#000000"
                app:srcCompat="@android:drawable/ic_menu_save" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_ModProducto_precio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Precio"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginTop="24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/et_ModProducto_precio"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="Precio"
                android:inputType="text"
                android:textColor="@color/white"
                android:textColorHint="@color/material_dynamic_neutral40" />

            <ImageButton
                android:id="@+id/imgbt_ModProducto_precio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#000000"
                app:srcCompat="@android:drawable/ic_menu_save" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_ModProducto_Stock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stock"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginTop="24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/et_ModProducto_Stock"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="Cantidad"
                android:inputType="text"
                android:textColor="@color/white"
                android:textColorHint="@color/material_dynamic_neutral40" />

            <ImageButton
                android:id="@+id/imgbt_ModProducto_Stock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#000000"
                app:srcCompat="@android:drawable/ic_menu_save" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_ModProducto_descripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descripcion"
            android:textColor="@color/white"
            android:layout_marginTop="24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="top">

            <EditText
                android:id="@+id/et_ModProducto_descripcion"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="183dp"
                android:background="#cdcdcd"
                android:gravity="top|start"
                android:hint="Descripcion del producto"
                android:maxLines="10"
                android:scrollbars="vertical"
                android:textColor="#000000" />

            <ImageButton
                android:id="@+id/imgbt_ModProducto_descripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#000000"
                app:srcCompat="@android:drawable/ic_menu_save" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
