<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Actividades.OpcionesDeAdmin">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/Admin_control_panel"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_margin="20sp"
            android:textSize="18dp"
            android:text="PANEL DE ADMINISTRADOR"
            android:textAlignment="center"
            android:textColor="@color/white" />


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="199dp"
            android:layout_height="157dp"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/admopc" />

        <Button
            android:id="@+id/bt_admin_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#F6655E"
            android:text="Registrar Empleado" />

        <TextView
            android:id="@+id/msg_register"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:text="Registra un nuevo empleado en la base de datos de tu establecimiento"
            android:textAlignment="center"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/bt_admin_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#F6655E"
            android:text="Eliminar empleado" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:text="Elimina un empleado de la base de datos de tu establecimiento"
            android:textAlignment="center"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/bt_admin_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#F6655E"
            android:text="Listar empleados" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:text="Lista a todos los empleados de la base de datos de tu establecimiento"
            android:textAlignment="center"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/bt_admin_cambiar_modo_empleado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:backgroundTint="#F6655E"
            android:text="Cambiar a modo empleado" />

        <Button
            android:id="@+id/bt_admin_inventarios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:backgroundTint="#F6655E"
            android:text="Gestionar Inventarios" />

        <Button
            android:id="@+id/bt_admin_salir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#E7312A"
            android:text="Cerrar Sesion" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>